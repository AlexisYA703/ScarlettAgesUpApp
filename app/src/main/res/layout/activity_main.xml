<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/scarlettwallpapercool">

    <ImageView
        android:id="@+id/scarlett_stage_imageview"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/age_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/age_label"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/age_count_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/age_count"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/increase_button"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="16dp"
        android:text="@string/add_age"
        android:layout_gravity="bottom"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/decrease_button"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="16dp"
        android:text="@string/reduce_age"
        android:layout_gravity="bottom"
        />

</LinearLayout>